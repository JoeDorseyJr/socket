# build
input: src
output: dist
build: node build.js

# window
title: Operator
width: 750
height: 520
cmd: node
arg: main.js

# advanced
compiler: g++
optimizations: -O3

flags_darwin: -luv -std=c++2a -framework WebKit -framework AppKit
flags_linux: `pkg-config --cflags --libs gtk+-3.0 webkit2gtk-4.0'`
flags_win32: -mwindows -L./dll/x64 -lwebview -lWebView2Loader

files_darwin: main.cc darwin.mm
files_linux: main.cc linux.cc
files_win32: main.cc win32.cc

