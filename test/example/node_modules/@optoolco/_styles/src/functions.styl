NoSelect()
  -webkit-touch-callout none
  -webkit-user-select none

NoDrag()
  -webkit-user-drag none

NoAppearance()
  -webkit-appearance none

Ellipsis()
  overflow hidden
  text-overflow ellipsis
  white-space nowrap

Size(Width, Height)
  width Width
  height Height

Absolute(Top = 0, Right = 0, Bottom = 0, Left = 0)
  position absolute
  top Top
  right Right
  bottom Bottom
  left Left

CenterX()
  position absolute
  left 50%
  -webkit-transform translateX(-50%)

CenterY()
  position absolute
  top 50%
  -webkit-transform translateY(-50%)

CenterXY()
  position absolute
  top 50%
  left 50%
  -webkit-transform translateX(-50%) translateY(-50%)
