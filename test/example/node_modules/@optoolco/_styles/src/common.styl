*
  box-sizing border-box
  -webkit-font-smoothing antialiased

*:focus
  outline none
  outline-style dotted
  outline-width 1px
  outline-color var(--tonic-info)

::-webkit-input-placeholder
  color var(--tonic-medium)

::selection
  color white
  background-color var(--tonic-accent)

body
  margin 0
  overflow hidden
  color var(--tonic-primary)
  font 14px var(--tonic-body)
  background-color var(--tonic-window)

h1, h2, h3, h4
  font-family var(--tonic-subheader)
  letter-spacing 1px
  text-transform uppercase
  color var(--tonic-info)

h1
  font-size 34px
  font-family var(--tonic-header)

p
  line-height 20px

a.dotted,
a.dotted:visited,
a.dotted:hover
  border-bottom 1px dotted
  cursor pointer
  color var(--tonic-accent)

a, a:visited
  text-decoration none
  color var(--tonic-primary)

a:hover
  color var(--tonic-accent)

body[os="linux"],
body[os="win32"]
  ::-webkit-scrollbar-corner,
  ::-webkit-scrollbar
    background transparent

  ::-webkit-scrollbar
    width 10px
    height 10px

  ::-webkit-scrollbar-thumb
    background var(--tonic-border)

  a
    color inherit
    text-decoration none
    cursor default
