.empty-state,
.error-state
  color var(--tonic-primary)
  text-align center
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)

  h2
    color var(--tonic-error)
    margin-bottom 8px

  p
    font-size 14px
  
  i
    margin 10px
    font-family var(--tonic-body)
    display block
