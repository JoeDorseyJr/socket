ul.checklist
  font 16px var(--tonic-subheader)
  margin 25px 0
  flex-basis 50%

  li
    line-height 28px

    &:before
      content ''
      width 9px
      height 4px
      display inline-block
      vertical-align super
      margin-right 9px
      border-bottom 2px solid var(--tonic-primary)
      border-left 2px solid var(--tonic-primary)
      transform rotate(-45deg)
      position relative
      top 2px

ul.icon-list
  font 16px var(--tonic-body)
  margin 25px 0
  flex-basis 50%

  @media $mobile
    margin 0

  li
    line-height 28px
    list-stle none
    position relative
    margin-left 20px

    &:before
      position absolute
      content ' '
      width 12px
      height 12px
      display inline-block
      background-size contain
      background-repeat no-repeat
      left -24px
      top 4px
      background-image url('#checkmark')

    &.list-item-success:before
      top 8px
      background-image url('#success')

    &.list-item-failure:before
      top 8px
      background-image url('#close')

    &.list-item-loading:before
      top 8px
      background-image url('#refresh')
