.data-table
  font 12px var(--tonic-monospace)
  Absolute(0, 0, 0, 0)
  width 100%
  overflow hidden
  background-color var(--tonic-background)
  color var(--tonic-primary) 

  .tonic--windowed--bottom,
  .tonic--windowed--top
    async-loader
      zoom 0.5

  *
    NoSelect()

    tonic-icon, i
      top 50%
      left 50%
      position absolute
      transform translate(-50%, -50%)

  .tonic--windowed--outer
    position absolute
    top 40px
    bottom 0
    right 0
    left 0

  .th,
  .tr
    display inline-flex
    overflow hidden
    border-bottom 1px solid var(--tonic-border)
    height 30px
    min-width 100%

  .tr:hover
    background var(--tonic-window)
    color var(--tonic-primary)
    cursor default

  .th
    background var(--tonic-window)
    box-shadow 0 -10px 20px rgba(0, 0, 0, 0.4)
    height 40px
    padding 2px
    position relative
    display inline-flex

  .td
    white-space nowrap
    display inline-block
    text-overflow ellipsis
    overflow hidden
    width 150px
    min-width 50px
    line-height 30px
    margin 0 14px

  .th .td
    height 30px
    line-height 36px
    color var(--tonic-info)
    position relative

    .type
      padding 2px 4px
      color var(--tonic-info)
      border-radius 2px
      border 1px solid var(--tonic-border)

    .drag-handle
      position absolute
      top 6
      bottom 2
      border-left 1px solid var(--tonic-border)
      opacity 0
      z-index -1
      right 4px
      width 4px
      cursor ew-resize

    &:hover
      .drag-handle
        opacity 1
        z-index 1

  .tr[data-selected="true"]
    background-color: var(--tonic-border);
    border-bottom: 1px solid var(--tonic-window);

  .tr[data-selected="true"]:hover
    background var(--tonic-border-accent)

  .tr .td
    height 30px
    line-height 30px

    tonic-icon
      vertical-align middle
      position relative
      top 4px

    .asc
      color var(--tonic-accent)
      margin 6px

    .icon
      cursor pointer
