//
// Drag and Drop
//
[draggable],
[droppable]
  border 1px solid transparent

body.dragdrop-dragging
  .drop-ready
    outline 1px dashed var(--tonic-accent)
    outline-offset -3px

    * 
      pointer-events none

  .data-table
    .tr:hover
      color unset
      background unset

    .tr[data-selected="true"],
    .tr[data-selected="true"]:hover
      background-color var(--tonic-border)
      color var(--tonic-disabled)
      border none !important

.dragdrop-drag-stub
  position absolute
  top -100px
  left -100px
  opacity 0
  z-index -1
  width 20px
  min-width 20px
  display none
  transition opacity 0.2s ease, z-index 0.2s ease

  .dragdrop-drag-stub-inner
    position absolute
    display inline-block
    height 20px
    min-width 20px
    width auto
    margin-top 16px
    margin-left 16px
    max-width 60px
    font-size 12px
    text-align center
    border-radius 99em
    color white
    padding 2px 4px
    background var(--tonic-accent)
    border 1px solid white

  &.show
    display inline-block
    opacity 1
    z-index 1000

//
// Windowed
//
.tonic--windowed--empty
  Absolute()

  .centered
    CenterXY()
    text-align center

//
// Inputs
//
tonic-input label,
tonic-select label,
tonic-textarea label,
tonic-checkbox
  color var(--tonic-primary)
  font 12px/14px var(--sans)
  text-transform uppercase
  letter-spacing 1px
  margin-top 20px
  display block

//
// Dialog
//
.tonic--dialog
  display grid
  grid-template-rows 44px 1fr 80px

  > header
    NoSelect()
    line-height 44px
    height 44px
    text-align center
    color var(--tonic-medium)
    display block

  > main
    padding 0 30px 10px
    position relative

  > footer
    NoSelect()
    text-align center
    background-color var(--tonic-window)
    bottom 0
    padding 16px
    text-align center
    width 100%
    display block

    tonic-button
      margin-right 10px

//
// Split
//
tonic-split .tonic--split-horizontal
  background var(--tonic-window)

//
// Toaster
//
tonic-toaster .tonic--wrapper
  top 20px !important
