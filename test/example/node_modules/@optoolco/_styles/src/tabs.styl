//
// Tabs
//

tonic-tabs
  border-bottom 1px solid var(--tonic-border)
  display flex
  height 50px

  tonic-tab, .tonic--tab
    margin 0
    border-radius 0
    line-height 50px
    width 100%
    text-align center
    text-transform uppercase
    text-overflow ellipsis
    overflow hidden
    font-size 12px

    a
      NoSelect()
      NoDrag()
      letter-spacing .8px
      height 100%
      display block
      color var(--tonic-medium)

    a[aria-selected="true"]
      position relative
      text-decoration underline
      text-decoration-color var(--tonic-accent)
      text-underline-offset 3px
      color var(--tonic-primary)

    a:hover
      text-decoration underline
      text-decoration-color var(--tonic-primary)
      text-underline-offset 3px
      color var(--tonic-primary)

    a[aria-selected="true"]:hover
      text-decoration-color var(--tonic-accent)
      color var(--tonic-accent)

    a.tonic--selected
      color var(--tonic-primary)

    a.tonic--selected span
      display inline-block
      border-bottom 2px solid var(--tonic-accent)
      padding-bottom 2px
